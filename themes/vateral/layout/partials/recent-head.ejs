<!--首页的头部-->

    <div class="post-header" style="background-image:url(<%= theme.post_header.img %>) ;height:450px;z-index:-1;">
        <div style="background-color:rgba(128,128,128,0.05);z-index:1;width:auto;height:450px; ">
        <a  href="<%=theme.post_header.url%>"  >

            <!-- 标题组件 -->
            <div class="post-header-title"  style="margin-top:140px;z-index:10;font-family:'楷体';">
                <p style="color:white;font-size:50px;height:160px;line-height: 100px;z-index:10;font-family:'楷体';">
                    <% if(theme.post_header.about) { %>
                    <% if(Array.isArray(theme.post_header.about)) { %>
                    <%- theme.post_header.about.join('</p><p>') %>
                    <% } else { %>
                    <%- theme.post_header.about %>
                    <% } %>
                    <% } %>
                    <br>
                    <!-- 访客组件 -->
                    <% if(theme.visitor) { %>
                    <span id="busuanzi_container_site_pv" style="z-index:10;color: white;font-size:19px;line-height: 10px;display: inline-block;height: 10px;font-family:'楷体';">
                    <%= theme.post_header.visitor_front %><span id="busuanzi_value_site_pv"></span><%= theme.post_header.visitor_back %>
                    </span>
                    <% } %>
                </p>
            </div>
        </a>
    </div>
    </div>


